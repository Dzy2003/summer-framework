<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="test_03.dao.IUserDao">

    <select id="queryUserInfoById" parameterType="test_03.po.User1" resultType="test_03.po.User1">
        SELECT *
        FROM users
        where uid = #{uid}
    </select>
    <select id="queryUsersInfoById" parameterType="test_03.po.User1" resultType="test_03.po.User1">
        SELECT *
        FROM users
        where uage = #{uage}
    </select>
    <resultMap id="activityMap" type="test_03.po.User1">
        <id column="id" property="uid"/>
        <result column="name" property="uname"/>
        <result column="age" property="uage"/>
    </resultMap>

</mapper>
